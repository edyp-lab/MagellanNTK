
$colCompletedDisabled: #ABDBAC
$colCompleted: #07910A

$colSkippedDisabled: #ECF4F880
$colSkipped: #ECF4F8

$colMandatory: #D30505
$colMandatoryDisabled: #D3050580

$colUndone: #B3AFAB
$colUndoneDisabled: #B3AFAB80

$colLine: #C6C8C6

$radius: 20px
$lineWidth: 3px


.box
   width: 75%
   height: 400px
   position: absolute
   top: 20px
   left: 50px
   text-align: center
   display: flex
   flex-direction: column
   justify-content: center
   align-items: center
   font-size: 1.2em 
   color: lightgrey

/*ronds*/
.sub_box
   margin: -3px auto
   padding-top: 35px
   border: 6px solid lightgrey
   border-radius: 50%
   height: 110px
   width: 110px



/*demi ronds*/
.sub_box:nth-child(odd)
   border-bottom-color: transparent
   border-left-color: transparent
   transform: rotate(45deg)



.sub_box:nth-child(even) 
   border-bottom-color: transparent
   border-left-color: transparent
   transform: rotate(225deg)



/*remet le text a l'horizontal*/
.sub_box:nth-child(odd) p 
   transform: rotate(-45deg)


.sub_box:nth-child(even) p 
   transform: rotate(-225deg)
   position: relative
   top: 4px


.active 
   color: red
   background-color: lightblue 

.undone
   color: black
   background-color: $colUndone
   
.undoneDisabled
   color: black
   background-color: $colUndoneDisabled
   
.completed
   color: black
   background-color: $colCompleted
   
.completedDisabled
   color: black
   background-color: $colCompletedDisabled
   
.skipped
   color: black
   background-color: #B3AFAB
   
.skippedDisabled
   color: black
   background-color: $colCompletedDisabled
   
.mandatory
   color: black
   background-color: #B3AFAB
   
.mandatoryDisabled
   color: black
   background-color: $colCompletedDisabled
   
.disabled
   color: black
   background-color: #B3AFAB
